
<MenuWidget>:
   canvas.before:
      Color:
         rgba:0,0,0,.9
      Rectangle:
         size:self.size
   Button:
      text: root.parent.menu_button_title
      font_size : "15dp"
      pos_hint:{"center_x":.5,"center_y":.6}
      size_hint:.2,.2
      on_press : root.parent.on_menu_button_pressed()
      background_color:0,1,0,
      background_normal : ""
      color: 0,0,1
   Label:
      font_size : "20dp"
      text: root.parent.menu_title
      pos_hint:{"center_x":.6,"center_y":.9}
      color: 0,0,1